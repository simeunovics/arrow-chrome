{
  "name": "Arrow",
  "short_name": "Arrow",
  "description" : "Informs you if link will open in new tab.",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "en",
  "author": "Simo Simeunovic <simeunovics@gmail.com>",
  "browser_action": {
    "default_popup": "src/info_box.html",
    "default_icon": "src/icon.png"
  },
  "content_scripts": [{
    "css": ["src/style.css"],
    "matches": ["*://*/*"]
  }],
  "icons": {
    "16": "src/images/icon16.png",
    "32": "src/images/icon32.png",
    "48": "src/images/icon48.png",
    "128": "src/images/icon128.png"
  }
}